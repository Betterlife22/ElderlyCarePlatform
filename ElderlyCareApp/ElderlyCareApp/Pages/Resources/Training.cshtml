@page
@model ElderlyCareApp.Pages.Resources.TrainingModel
@{
    ViewData["Title"] = "Add Training Resource";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-video me-2"></i>Add New Training Resource
                    </h3>
                </div>

                <div class="card-body">
                    <form method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-4">
                            <label asp-for="UploadDataModel.Description" class="form-label fw-bold">
                                <i class="fas fa-align-left me-1"></i>Description
                            </label>
                            <textarea asp-for="UploadDataModel.Description"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Enter detailed description of the training resource..."
                                      required></textarea>
                            <div class="invalid-feedback">
                                Please provide a description.
                            </div>
                            <span asp-validation-for="UploadDataModel.Description" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="UploadDataModel.Link" class="form-label fw-bold">
                                <i class="fas fa-link me-1"></i>Resource Link
                            </label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-globe"></i>
                                </span>
                                <input asp-for="UploadDataModel.Link"
                                       class="form-control"
                                       placeholder="https://example.com/training"
                                       required />
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid URL.
                            </div>
                            <span asp-validation-for="UploadDataModel.Link" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a href="/Resources" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Save Resource
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer bg-light">
                    <small class="text-muted">
                        <i class="fas fa-info-circle me-1"></i>All fields are required
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
        }

        .card-header {
            border-radius: 10px 10px 0 0 !important;
            padding: 1.25rem 1.5rem;
        }

        .form-control, .input-group-text {
            border-radius: 8px;
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .btn-primary {
            background-color: #4e73df;
            border-color: #4e73df;
            padding: 0.5rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
        }

            .btn-primary:hover {
                background-color: #3a5ec2;
                border-color: #3a5ec2;
            }

        .btn-outline-secondary {
            border-radius: 8px;
            padding: 0.5rem 1.5rem;
        }

        .invalid-feedback {
            display: none;
            margin-top: 0.25rem;
        }

        .was-validated .form-control:invalid ~ .invalid-feedback,
        .form-control.is-invalid ~ .invalid-feedback {
            display: block;
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Bootstrap validation script
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}