@page
@model ElderlyCareApp.Pages.SuccessfullPayModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Successfull Pay</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .paycontainer {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            height: 50vh;
        }
        .box {
            background-color: white;
            padding: 30px;
            border-radius: 10px;

            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }
        .logo {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }
        .icon img {
            width: 80px;
        }
        h2 {
            color: #d4a017;
        }
        p {
            color: #333;
        }
        .buttons {
            margin-top: 20px;
        }
        .btn {
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            font-size: 16px;
            margin: 5px;
        }
        .btn-history {
            background-color: white;
            border: 1px solid #333;
        }
        .btn-home {
            background-color: #fbc02d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="paycontainer">
        <div class="box">
            <div class="icon">
                <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" alt="Success Icon">
            </div>
            <h2>Upgrade Successfully !</h2>
            <p>We have sent a confirmation email with your details.</p><!--If can-->
            <div class="buttons">
                <a class="btn btn-history view" asp-page="/Booking/BookingList">View Your Booking</a>
                <a class="btn btn-home" href="./Index">Home Page</a>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let account = localStorage.getItem('account');
            console.log(account);
            const parsedData = JSON.parse(account);
            //document.getElementById("userFullName").innerText = parsedData.fullName;

            console.log(parsedData.accountId);// Get from localStorage
            const accountid = parsedData.accountId;
            let buyButton = document.getElementById("view");

           if (accountid) {
                document.querySelectorAll(".view").forEach(button => {
                let currentHref = button.getAttribute("href");
                button.setAttribute("href", `${currentHref}?accountid=${encodeURIComponent(accountid)}`);
            });
        }
        });
    </script>
</body>
</html>