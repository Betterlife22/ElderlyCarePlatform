    @model ElderlyCareApp.Pages.BookingServicePage.CreateModel

    @{
        ViewData["Title"] = "Create";
        Layout = "_CustomerLayout";
    }

    <h1>Create</h1>

    <h4>Booking</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>                
                <div class="form-group">
                    <label asp-for="Booking.CaregiverId" class="control-label">CareGiver</label>
                    <select asp-for="Booking.CaregiverId" class ="form-control" asp-items="ViewBag.CaregiverId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Booking.ServiceId" class="control-label">Service</label>
@*                    <select asp-for="Booking.ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
                *@  <input type="hidden" asp-for="Booking.ServiceId" value="@Model.Service.Id" />

                <input class="form-control" value="@Model.Service.Name" readonly />
            </div>
                <div class="form-group">
                    <label asp-for="Booking.ScheduleDate" class="control-label"></label>
                    <input asp-for="Booking.ScheduleDate" class="form-control" />
                    <span asp-validation-for="Booking.ScheduleDate" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <br />
    <div>
        <a asp-page="/Index">Back to HomePage</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
